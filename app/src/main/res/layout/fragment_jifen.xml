<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/xkh2"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    tools:context=".ui.pay.JifenFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/play_title"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/textvip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:text="请选择充值金额"
                android:textColor="@color/white"
                android:textSize="@dimen/font_smaller"/>
        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            >

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerHorizontal="true"
                android:text="请选择充值金额"
                android:textColor="@color/white"
                android:textSize="@dimen/font_smaller"/>
        </LinearLayout>



        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:paddingTop="10dp"

            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:text="会员专享权益"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/font_smaller"
            android:visibility="gone" />







        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/iv_play_s"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="visible">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:text="卡密充值"
                    android:textColor="@color/gray_999"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_recharge_amount"
                android:gravity="center_vertical"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tvOnlinePay"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_recharge_amount4"
                    android:foreground="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="点击获取卡密"
                    android:textColor="#87530c"
                    android:visibility="visible" />


                <View
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black" />

                <EditText
                    android:id="@+id/etCardPassword"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="5"
                    android:background="@null"
                    android:hint="输入您的卡密后,点击卡密充值"
                    android:textColor="@color/gray_999"
                    android:textSize="12dp"
                    tools:ignore="SpUsage" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卡密购买链接: "
                    android:textColor="#FE01BC"
                    android:textSize="@dimen/font_smaller" />

                <TextView
                    android:id="@+id/tvOnlinePay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="点我去购买>"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_smaller" />
            </LinearLayout>





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="温馨提示："
                android:textColor="@color/ls"
                android:textStyle="bold"
                android:textSize="@dimen/font_smaller"
                tools:ignore="SpUsage" />
            <TextView
                android:id="@+id/Rechargeentrykami"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:text="请选择您需要购买的套餐"
                android:textColor="@color/white"
                android:textSize="@dimen/font_small"
                tools:ignore="SpUsage" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvHit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="1元可兑换10个积分"
            android:textColor="@color/gray_999"
            android:textSize="@dimen/font_smaller"
            android:visibility="gone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal"
        >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/pay_anniu"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="立即兑换"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/selectedPackagePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="实付"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/btnPurchaseNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/bg_pay2"

            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="立即购买"
            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/week_money3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:visibility="gone"

            android:paddingBottom="10dp"
            android:text="实付"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/month_money3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"

            android:paddingBottom="10dp"
            android:visibility="gone"
            android:text="实付"
            android:textColor="#FFFFFF" />
        <TextView
            android:id="@+id/year_money3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="实付"
            android:textColor="#FFFFFF" />

</LinearLayout>