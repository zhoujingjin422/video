<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/xkh"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/relaTop"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/iv_home_top_bg"
            android:layout_width="match_parent"
            android:background="@drawable/shape_bg_orange_to_light_top"
            android:scaleType="fitXY"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/iv_av_back"
            android:layout_width="@dimen/av_top_or_bottom_iv_size"
            android:layout_height="@dimen/av_top_or_bottom_iv_size"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/iv"
            android:scaleType="fitXY"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_av_back"
             />



        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="20dp"
            tools:text="用户许可协议"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvAgreement"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/relaTop"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="vertical"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>