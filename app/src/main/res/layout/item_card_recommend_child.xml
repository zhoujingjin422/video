<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginLeft="@dimen/dp_4"
    android:layout_marginRight="@dimen/dp_4"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_iv_card_child_icon"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_bg_gray_radius_5dp"
            android:scaleType="fitXY"
            android:contentDescription="@string/iv" />

        <TextView
            android:id="@+id/item_tv_card_child_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:gravity="center"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="@dimen/font_smaller"
            tools:text="@string/tip" />

<!--        <LinearLayout-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center|end">-->
<!--            <ImageView-->
<!--                android:layout_marginRight="1dp"-->
<!--                android:layout_marginTop="1dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:background="@drawable/ic_video_hot_play"/>-->
<!--        </LinearLayout>-->
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_tv_card_child_up_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:ellipsize="end"
            android:gravity="center|end"
            android:includeFontPadding="false"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/up_title"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="@dimen/font_smaller" />

    </FrameLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_card_child_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/dp_4"
        android:ellipsize="end"
        android:gravity="center|start"
        android:includeFontPadding="false"
        android:paddingTop="7dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="13dp"
        android:textStyle="bold"
        android:visibility="visible"
        app:autoSizeTextType="uniform"
        tools:text="风语咒" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/item_tv_card_child_vod_blurb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:visibility="gone"
        android:gravity="center|start"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="@color/gray_999"
        android:textSize="12sp"
        app:autoSizeTextType="uniform"
        tools:text="风语咒" />

</LinearLayout>