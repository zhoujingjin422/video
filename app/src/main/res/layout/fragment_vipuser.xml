<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/xkh2"
    android:paddingLeft="18dp"
    android:paddingTop="20dp"
    android:paddingRight="18dp"
    tools:context=".ui.pay.VipuserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/play_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/textvip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true"
                    android:text="购买积分"
                    android:textColor="@color/white"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/play_title1"
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/week_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_white_radius_8dp2"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    >

                    <ImageView

                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/ic_jifen" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center|bottom">



                        <TextView
                            android:id="@+id/week_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />

                        <TextView
                            android:id="@+id/week_moneyok"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/week_money2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="折合1元一天"

                        android:textColor="@color/white"
                        android:textSize="@dimen/font_smallest"
                        tools:ignore="SpUsage" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/month_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_white_radius_8dp2"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    >

                    <ImageView

                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/ic_jifen" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center|bottom">



                        <TextView
                            android:id="@+id/month_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />
                        <TextView
                            android:id="@+id/month_moneyok"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/month_money2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="折合1元一天"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_smallest"
                        tools:ignore="SpUsage" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/year_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@drawable/shape_bg_white_radius_8dp2"
                    android:gravity="center|top"
                    android:orientation="vertical"
                    >

                    <ImageView

                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/ic_jifen" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center|bottom">



                        <TextView
                            android:id="@+id/year_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />
                        <TextView
                            android:id="@+id/year_moneyok"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="98"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_large"
                            android:textStyle="bold"
                            tools:ignore="SpUsage" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/year_money2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:text="折合1元一天"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_smallest"
                        tools:ignore="SpUsage" />

                </LinearLayout>
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@color/xkh3" />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvHit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="1元可兑换10个积分"
                android:textColor="@color/gray_999"
                android:textSize="@dimen/font_smaller"
                android:visibility="gone" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="实付："
                        android:textSize="16dp"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:id="@+id/selectedPackagePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="¥0"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:textColor="@color/ls" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/btnPurchaseNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/bg_pay2"

                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="立即购买"
                        android:textColor="#FFFFFF" />


                    <TextView
                        android:id="@+id/week_money3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:visibility="gone"
                        android:paddingBottom="10dp"
                        android:text="实付"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/month_money3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:visibility="gone"
                        android:text="实付"
                        android:textColor="#FFFFFF" />
                    <TextView
                        android:id="@+id/year_money3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="实付"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="温馨提示："
                        android:textColor="@color/ls"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_smaller"
                        tools:ignore="SpUsage" />
                    <TextView
                        android:id="@+id/Rechargeentryjifen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:text="请选择您需要购买的套餐"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small"
                        tools:ignore="SpUsage" />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>